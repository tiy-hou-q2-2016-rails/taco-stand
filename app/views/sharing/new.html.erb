
<div class="page-header">
  <h1>Share Taco</h1>
</div>

<h2>Taco Name: <%= @taco.name %></h2>
<p>
  <%= link_to "Back to Taco", taco_path(id: @taco.id) %>
</p>

<%= form_tag create_share_path do %>
  <div class="form-group">
    <%= label_tag :email, "Email of the person you would like to share this delicous taco with?" %>
    <%= email_field_tag :email, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Share This Taco", class: "btn btn-lg btn-primary" %>
  </div>

<% end %>
